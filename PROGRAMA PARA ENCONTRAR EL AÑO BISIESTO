#include <stdio.h>
int main() {
int year;
printf("Introduce un a単o: ");
scanf("%d", &year);
// el a単o es bisiesto si es divisible por 4 y no es divisible por 100 o si es divisible entre 400
if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)) {
printf("%d es un a単o bisiesto.\n", year);
} else {
printf("%d no es un a単o bisiesto.\n", year);
}
return 0;
}
