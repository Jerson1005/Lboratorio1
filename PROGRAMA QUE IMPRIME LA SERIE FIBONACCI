#include <stdio.h>
int main() {
int numSerie, primerNum = 0, segNum = 1, siguiente;
// Solicitar al usuario el número de términos
printf("Ingrese el número de términos de la serie de Fibonacci: ");
scanf("%d", &numSerie);
// Validar la entrada
if (numSerie <= 0) {
printf("Por favor, ingrese un número entero positivo.\n");
} else {
printf("Serie de Fibonacci:\n");
// Imprimir los términos de la serie
for (int i = 1; i <= numSerie; i++) {
if (i == 1) {
printf("%d, ", primerNum); // Imprimir el primer término
continue;
}
if (i == 2) {
printf("%d, ", segNum); // Imprimir el segundo término
continue;
}
